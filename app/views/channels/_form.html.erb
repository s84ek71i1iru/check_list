<%= form_for @channel do |f| %>
	<div class="form-group">
		<%= f.label :name, "Name" %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-action">
		<%= f.submit "Submit", class: 'btn btn-success' %>
		<%= link_to "Cancel", channels_path, class: 'btn btn-danger' %>
	</div>
<% end %>